# Meowth Slack Message Summarizer Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# SLACK CONFIGURATION
# ==============================================================================

# Slack App Token (starts with xapp-)
# Get this from your Slack app's "Basic Information" > "App-Level Tokens"
SLACK_APP_TOKEN=xapp-1-YOUR-APP-TOKEN-HERE

# Slack Bot Token (starts with xoxb-)
# Get this from your Slack app's "OAuth & Permissions" > "Bot User OAuth Token"
SLACK_BOT_TOKEN=xoxb-YOUR-BOT-TOKEN-HERE

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ==============================================================================
# OPTIONAL CONFIGURATION
# ==============================================================================

# Rate limiting (requests per minute)
# Slack allows 100 per minute for most endpoints
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Reconnection settings
RECONNECTION_ATTEMPTS=3
RECONNECTION_DELAY=5

# Processing timeouts (seconds)
COMMAND_TIMEOUT=30
API_REQUEST_TIMEOUT=10

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# ==============================================================================

# Set to true for development mode (more verbose logging, etc.)
DEVELOPMENT_MODE=false

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Custom user agent for API requests (optional)
# USER_AGENT=Meowth/1.0.0